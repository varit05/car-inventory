<!--Jumbotron/Header-->
<section id="header" class="jumbotron text-center">
    <h1 class="display-3"> Edit Employee </h1>
</section>

<div class="container">
    <div class="row text-center h-100">
        <div class="col-md-3 text-center my-auto">
            <div class="card card-block d-flex" style="width: 60rem;">
                <div class="card-body">
                    <h3 class="card-title">Edit Employee</h3>
                    <form class="centerForm" action="/employee/{{employee.employee_id}}?_method=PUT" method="post">
                        <fieldset>
                            <div>
                                <label for="employee">Employee Name:
                                    <input type="text" name="name" required value="{{employee.name}}" id="employeeName">
                                </label>
                                <label for="employee">Salary Name:
                                    <input type="number" name="salary" required value="{{employee.salary}}" id="employeeSalary">
                                </label>
                                <label for="employee">Number of Cars Sold:
                                    <input type="number" name="num_cars_sold" required value="{{employee.num_cars_sold}}"
                                        id="employeeSales">
                                </label>
                            </div>
                            <input type="submit" value="Edit Employee" id="editEmployee">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>