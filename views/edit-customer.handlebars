<!--Jumbotron/Header-->
<section id="header" class="jumbotron text-center">
    <h1 class="display-3"> Edit Customer </h1>
</section>

<div class="container">
    <div class="row text-center h-100">
        <div class="col-md-3 text-center my-auto">
            <div class="card card-block d-flex" style="width: 60rem;">
                <div class="card-body">
                    <h3 class="card-title">Edit Customer</h3>
                    <form class="centerForm" action="/customer/{{customer.customer_id}}?_method=PUT" method="post">
                        <fieldset>
                            <div>
                                <label for="customer">Customer First Name:
                                    <input type="text" name="first_name" required value="{{customer.first_name}}" id="customerFirstName">
                                </label>
                                <label for="customer">Customer Last Name:
                                    <input type="text" name="last_name" required value="{{customer.last_name}}" id="customerLastName">
                                </label>
                                <label for="customer">Customer Phone Number:
                                    <input type="number" name="phone_number" required value="{{customer.phone_number}}"
                                        id="customerPhoneNumber">
                                </label>
                                <label for="customer">Customer Email Address:
                                    <input type="email" name="email_address" required value="{{customer.email_address}}"
                                        id="customerEmailAddress">
                                </label>
                            </div>
                            <input type="submit" value="Edit Customer" id="editCustomer">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>